<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"  android:background="@color/tan_background" android:orientation="vertical"     xmlns:tools="http://schemas.android.com/tools"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Hello please select your region"
        android:layout_gravity="center"
        android:paddingTop="16dp"/>

<Button
    android:id = "@+id/st_louis_cafes"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:text = "@string/st_louis"
    android:background="@color/category_status"
    android:textColor="#FFFFFF"
    android:layout_gravity="center"
    android:layout_marginTop="24dp"/>

    <Button
        android:id = "@+id/minnie_cafes"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text = "@string/minneapolis"
        android:background="@color/category_status"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>
</LinearLayout>