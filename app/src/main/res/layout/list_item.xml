<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"   xmlns:tools="http://schemas.android.com/tools" android:minHeight="@dimen/list_item_height" android:background="@color/tan_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:id = "@+id/text_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:paddingLeft="16dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text = "Christian Lawrence"
                android:id = "@+id/candidate_name_text_view"

                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="bottom"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="333-333-3333"
            android:id = "@+id/phone_text_view"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:gravity="top"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Delivery Driver"
                android:id = "@+id/candidate_position_text_view"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:gravity="top"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="example@gmail.com"
                android:id = "@+id/candidate_email_text_view"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:gravity="top"/>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>