<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="144dp" android:orientation="horizontal"   xmlns:tools="http://schemas.android.com/tools" android:minHeight="@dimen/list_item_height" android:background="@color/tan_background">


        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id = "@+id/position_picture"
            android:layout_centerVertical="true"
       />

        <RelativeLayout
            android:id = "@+id/text_box"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/position_picture"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="16dp"
            android:paddingLeft="12dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1"
                tools:text = "Christian Lawrence"
                android:id = "@+id/candidate_name_text_view"

                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="bottom"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_weight="1"
            tools:text="333-333-3333"
            android:id = "@+id/phone_text_view"
            android:textColor="@android:color/black"
                android:layout_below="@id/candidate_name_text_view"
            android:textSize="18sp"
           />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1"
                tools:text="example@gmail.com"
                android:id = "@+id/candidate_email_text_view"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_below="@id/phone_text_view"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@id/candidate_email_text_view"
                android:id= "@+id/position_text_view"
                tools:text = "DTM"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1"
                tools:text="Cafe 1281"
                android:textStyle="bold"
                android:id = "@+id/cafe_text_view"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:gravity="top"/>


            <CheckBox android:id="@+id/checkbox_hired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hired"
                android:layout_alignParentRight="true"
                android:paddingRight = "36dp"/>

            <CheckBox android:id="@+id/not_hired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight= "1"
                android:text="Not Hired"
                android:layout_below="@id/checkbox_hired"
               android:layout_alignParentRight="true"
                android:paddingRight="10dp"

                />


            <CheckBox
                android:id= "@+id/ncns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "NCNS"
                android:layout_weight= "1"
                android:layout_below="@id/not_hired"
                android:layout_alignParentRight="true"
                android:paddingRight="33dp"/>

        </RelativeLayout>
</RelativeLayout>